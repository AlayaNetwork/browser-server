<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:reg="http://www.dangdang.com/schema/ddframe/reg"
       xmlns:job="http://www.dangdang.com/schema/ddframe/job"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                        http://www.springframework.org/schema/beans/spring-beans.xsd
                        http://www.dangdang.com/schema/ddframe/reg
                        http://www.dangdang.com/schema/ddframe/reg/reg.xsd
                        http://www.dangdang.com/schema/ddframe/job
                        http://www.dangdang.com/schema/ddframe/job/job.xsd">
    <!--配置作业注册中心 dubbo一样zk注册中心-->
    <reg:zookeeper id="regCenter" server-lists="${regCenter.serverList}" namespace="${regCenter.namespace}"
                   base-sleep-time-milliseconds="1000"
                   max-sleep-time-milliseconds="3000" max-retries="3"/>

    <reg:zookeeper id="regCenter" server-lists="${regCenter.serverList}" namespace="${regCenter.namespace}"
                   base-sleep-time-milliseconds="1000"
                   max-sleep-time-milliseconds="3000" max-retries="3"/>

    <job:simple id="blockSynchronizeJob${netInfo}" class="com.platon.browser.agent.job.BlockSynchronizeJob" registry-center-ref="regCenter"
                cron="*/1 * * * * ?" sharding-total-count="1" sharding-item-parameters="0=blockSynchronizeJob" overwrite="true"
                failover = "true" misfire = "true" description = "同步区块信息任务"/>


    <job:simple id="pendingTxSynchronizeJob${netInfo}" class="com.platon.browser.agent.job.PendingTxSynchronizeJob" registry-center-ref="regCenter"
                cron="*/15 * * * * ?" sharding-total-count="1" sharding-item-parameters="0=pendingTxSynchronizeJob" overwrite="true"
                failover = "true" misfire = "true" description = "挂起交易信息任务"/>


    <job:simple id="pendingTxUpdateTaskJob${netInfo}" class="com.platon.browser.agent.job.PendingTxUpdateTaskJob" registry-center-ref="regCenter"
                cron="*/30 * * * * ?" sharding-total-count="1" sharding-item-parameters="0=pendingTxUpdateTaskJob" overwrite="true"
                failover = "true" misfire = "true" description = "挂起交易同步任务"/>
</beans>